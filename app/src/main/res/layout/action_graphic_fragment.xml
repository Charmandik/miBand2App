<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/action_graphic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="График" />
        <!--todo: in title of graphic add count of steps-->

        <TextView
            android:id="@+id/action_distance"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Дистанция: --6.6--км" />

        <TextView
            android:id="@+id/action_burned"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Сжег --258-- Ккал" />

        <TextView
            android:id="@+id/action_today"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Сегодняшняя активность" />

        <TextView
            android:id="@+id/action_type"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="--Активность--" />
    </LinearLayout>
</RelativeLayout>